!!! html
%html{:lang => 'en'}
  %head
    %meta{:charset => 'utf-8'}
    %meta{:name => 'viewport', :content => 'width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0'}
    %title Jeff Hudson
    %meta{:name => 'description', :content => ''}
    %meta{:name => 'author', :content => 'Jeff Hudson'}
    %link{:rel => 'stylesheet', :href => 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css'}
    %link{:rel => 'stylesheet', :href => 'https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css'}
    %link{:rel => 'stylesheet', :href => 'assets/stylesheets/application.css'}
    %script{:src => 'https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js'}
    %script{:src => 'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js'}
    %script{:src => 'assets/javascripts/application.js'}
  %body
    %nav.navbar.navbar-main
      .container-fluid
        .navbar-header
          %button.navbar-toggle.collapsed{:type => 'button', 'data-toggle' => 'collapse', 'data-target' => '#navbar', 'aria-expanded' => 'false'}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => '#'}
            %img.navbar-logo{:alt => 'Seeqe', :src => 'assets/images/seeqe_logo.png'}
        #navbar.collapse.navbar-collapse
          %ul.nav.navbar-nav
            %li.active
              %a{:href => '#'} Browse
            %li
              %a{:href => '#'} Discover
            %li
              %a{:href => '#'} Recently Added
            %li
              %a{:href => '#'} Ask
          %ul.nav.navbar-nav.navbar-right
            %li
              %a{:href => '#'}
                %div.navbar-notifications
                  %i.fa.fa-bell-o
            %li
              %a{:href => '#'}
                %img.navbar-profile-pic{:alt => '', :src => 'assets/images/profile-pic.jpg'}
                Profile
    .container-fluid.banner{:style => 'background-image: url(\'assets/images/banner_images/discover.jpg\')'}
      %h1
        %span.banner-fancy Discover
        %span.banner-small in
        Ottawa, Canada
      %p View cool products near you.
      %p Discover what's popular.
      %p Favorite the ones you like.
    .container-fluid.banner-heading
      .banner-heading-text Featured Stores
    .container.discover-container
      %p.grey-text
        Here are our
        %span.accent favorite products
        of the week!
      %p.grey-text Discover what's near you now!
      .row.view-options
        .col-sm-6.view-options-left
          %a{:href => '#'}
            %i.fa.fa-th-list
          &nbsp;
          %a{:href => '#'}
            %i.fa.fa-square
          &nbsp;
          %a{:href => '#'}
            %i.fa.fa-th-large
        .col-sm-6.view-options-right
          %a.active{:href => '#'}
            Top Find
            %i.fa.fa-star
          &nbsp;
          &#124;
          &nbsp;
          %a{:href => '#'}
            Alphabetical
            %i.fa.fa-sort-alpha-asc
          &nbsp;
          &#124;
          &nbsp;
          %a{:href => '#'}
            Near Me
            %i.fa.fa-map-marker
      .row.item-container
        - (1..12).each do |i|
          .col-sm-6.col-md-4.col-lg-3.item-box
            .item
              %img.item-picture{:src => 'http://lorempixel.com/400/300'}
              %h4.item-title Thing #{i}
              %p.item-description
                Asked by
                %a.item-asked-by-name Jeff Hudson
              %p.item-description 4 Answers
        .col-xs-12.item-footer
          %a{:href => '#'}
            Return to top
          &nbsp;
          &#124;
          &nbsp;
          %a{:href => '#'}
            Ask Question
            %i.fa.fa-comments-o
    .container.featured-stores-heading
      %h1 Featured Stories
    .container.featured-stores-main
      %p.grey-text
        Here are our
        %span.accent favorite products
        of the week!
      %p.grey-text Discover what's near you now!
      .row.view-options
        .col-sm-6.view-options-left
          %a{:href => '#'}
            %i.fa.fa-th-list
          &nbsp;
          %a{:href => '#'}
            %i.fa.fa-square
          &nbsp;
          %a{:href => '#'}
            %i.fa.fa-th-large
        .col-sm-6.view-options-right
          %a.active{:href => '#'}
            Top Find
            %i.fa.fa-star
          &nbsp;
          &#124;
          &nbsp;
          %a{:href => '#'}
            Alphabetical
            %i.fa.fa-sort-alpha-asc
          &nbsp;
          &#124;
          &nbsp;
          %a{:href => '#'}
            Near Me
            %i.fa.fa-map-marker
    .container.pre-footer
    %footer.footer
      .container
        %p.text-muted
          Footer text
