!!! html
%html{:lang => 'en'}
  %head
    = Haml::Engine.new(File.read('_header.haml')).render
  %body
    = Haml::Engine.new(File.read('_navbar.haml')).render
    .container-fluid.banner{:style => 'background-image: url(\'assets/images/banner_images/import.jpg\')'}
      %h1
        Upload Inventory
      %p Let your customers know what products you currently have in store
    .container-fluid.banner-heading.banner-heading-options
      .banner-heading-text
        %a{:href => 'import.html'} Choose
      .banner-heading-text
        %a{:href => 'import-edit.html'} Edit
      .banner-heading-text.active
        %a{:href => 'import-upload.html'} Upload
    .container.discover-container
      .row
        .col-xs-2.col-sm-1.col-sm-offset-1.import-icon
          %i.fa.fa-share-square-o
        .col-xs-10.col-sm-4.import-text
          %h3.import-heading Instructions
          Share your products with the world!
      .row.view-options
        .col-sm-6.view-options-left
          %a{:href => '#'}
            %i.fa.fa-th-list
          &nbsp;
          %a{:href => '#'}
            %i.fa.fa-square
          &nbsp;
          %a{:href => '#'}
            %i.fa.fa-th-large
        .col-sm-6.view-options-right
          %a.active{:href => '#'}
            Top Find
            %i.fa.fa-star
          &nbsp;
          &#124;
          &nbsp;
          %a{:href => '#'}
            Alphabetical
            %i.fa.fa-sort-alpha-asc
          &nbsp;
          &#124;
          &nbsp;
          %a{:href => '#'}
            Near Me
            %i.fa.fa-map-marker
      .row.item-container
        - (1..12).each do |i|
          .col-sm-6.col-md-4.col-lg-3.product-box
            .product
              %img.product-picture{:src => 'http://lorempixel.com/400/300'}
              %h4.product-title Thing #{i}
              %p.product-description.float-left
                Asked by
                %a.product-asked-by-name{:href => '#'} Jeff Hudson
              %p.product-description.float-right
                %a.answer-count{:href => '#'} 4 Answers
              %p &nbsp;
        .col-xs-12.item-footer
          %a{:href => '#'}
            Return to top
      %form.import-form
        %button.btn.rounded-input.import-upload-next
          %a{:href => 'import-edit.html'} Back
        %button.btn.rounded-input.import-upload-next
          %a{:href => '#'} Finish
    = Haml::Engine.new(File.read('_footer.haml')).render
