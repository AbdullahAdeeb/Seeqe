!!! html
%html{:lang => 'en'}
  %head
    = Haml::Engine.new(File.read('_header.haml')).render
  %body
    = Haml::Engine.new(File.read('_navbar.haml')).render
    .login-page{:style => 'background-image: url(\'assets/images/login_page_background.jpg\')'}
      .login-box
        %img.login-box-logo{:src => 'assets/images/seeqe_logo_white.png'}
        %form.login-form
          .form-group
            %input{:type => 'text', :placeholder => 'Username / Email'}
          .form-group
            %input{:type => 'password', :placeholder => 'Password'}
          .row
            .col-sm-6.checkbox
              %input#checkbox-remember-me.remember-me{:type => 'checkbox'}
              %label.remember-me-label{:for => 'checkbox-remember-me'}
                Remember Me
            .col-sm-6.forgot-password
              %a{:href => '#'}
                Forgot Password?
